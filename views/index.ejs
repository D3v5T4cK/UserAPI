
<%- include('include/_header') %>

    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/addUser" class="border-shadow">
                    <span class="text-gradient">New User <i class="fas fa-user"></i></span>
                </a>
                <select id="selectType">
                    <option>Select</option>
                    <option value="name">Name</option>
                    <option value="email">Email</option>
                    <option value="phone">Phone</option>
                    <option value="gender">Gender</option>
                    <option value="location">Location</option>
                    <option value="address">Address</option>
                  </select>
                <input type="text" name="search" onkeyup="sendData(this)"/>
                <a onclick="getUser()" class="border-shadow hoverclass">
                    <span class="text-gradient">Generate User <i class="fas fa-user"></i></span>
                </a>
            </div>
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>City</th>
                            <th>Gender</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show') %>
                    </tbody>
                </table>
                <section id="searchResults"></section>
            </form>
        </div>
    </main>

<%- include('include/_footer') %>